# Question 1 
# Task 1 Task 2 and Task 3 
place = input("Choose a place: forest or cave? ")

if place == "forest":
    action = input("climb a tree or cross a river?")
    if action == "climb a tree":
        print("You found a bird's nest!")
    elif action == "cross a river":
        print("You found a boat!")
    else:
        print("Invalid action. Please choose a valid action.")
elif place == "cave":
    action = input("light a torch or proceed in the dark?")
    if action == "light a torch":
        print("You can see a hidden treasure!")
    elif action == "proceed in the dark":
        print("You stumble upon a hidden trap!")
    else:
        print("Invalid action. Please choose a valid action.")
else:
    print("Invalid place. Please choose a valid place.")

# Question 2
# Task 1, Task 2, and Task 3
attendees = int(input("Enter number of attendees: "))
venue = "large hall" if attendees > 100 else "conference room"

if attendees > 100:
    additional_items = "audio system and projector"
else:
    additional_items = "audio system"

catering_choice = input("Do you want vegetarian food? (yes/no): ")

if catering_choice == "yes":
    catering_recommendation = "Veggie Delight Caterers"
else:
    catering_recommendation = "Gourmet Meals Caterers"

print("Venue: " + venue)
print("Additional items recommended: " + additional_items)
print("Catering recommendation: " + catering_recommendation)